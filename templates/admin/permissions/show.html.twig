<!DOCTYPE html>

<title>Permissions</title>

{% block body %}
    <h1>Permissions</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ permission.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ permission.name }}</td>
            </tr>
            <tr>
                <th>ShortName</th>
                <td>{{ permission.shortName }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ permission.status ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>CreatedBy</th>
                <td>{{ permission.createdBy ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ permission.createdAt ? permission.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ permission.updatedAt ? permission.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>DeletedAt</th>
                <td>{{ permission.DeletedAt ? permission.DeletedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_permissions_index') }}">back to list</a>

    <a href="{{ path('app_admin_permissions_edit', {'id': permission.id}) }}">edit</a>

    {{ include('admin/permissions/_delete_form.html.twig') }}
{% endblock %}
